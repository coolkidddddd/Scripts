local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- GUI
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 160, 0, 50)
button.Position = UDim2.new(0.5, -80, 0, 10) -- CENTER TOP
button.BackgroundColor3 = Color3.fromRGB(255, 80, 120)
button.TextColor3 = Color3.new(1, 1, 1)
button.TextScaled = true
button.Text = "Speed: OFF"
button.Font = Enum.Font.GothamBold
button.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = button

-- Toggle Speed
local boosted = false

button.MouseButton1Click:Connect(function()
	boosted = not boosted

	if boosted then
		humanoid.WalkSpeed = 40
		button.Text = "Speed: ON"
		button.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
	else
		humanoid.WalkSpeed = 16
		button.Text = "Speed: OFF"
		button.BackgroundColor3 = Color3.fromRGB(255, 80, 120)
	end
end)

-- Reapply on respawn
player.CharacterAdded:Connect(function(char)
	character = char
	humanoid = char:WaitForChild("Humanoid")
	if boosted then humanoid.WalkSpeed = 40 end
end)
